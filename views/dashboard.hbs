<h6>Dashboard</h6>
<h3>Hello {{name}}</h3>
<p>Here are your accumulated habits</p>
{{#if habits}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each habits}}
                <tr>
                    <td><a href="/habits/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>
                        <a href="/habits/edit/{{_id}}" class="btn btn-float">
                        <i class="fas fa-edit"></i>
                        </a>

                        <form action="/habits/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn red">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<p>You have not created any habits.</p>
{{/if}}