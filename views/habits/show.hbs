<div class="row">
    <div class="col s12 m8">
        <h3>{{habit.title}}
            <small>{{{editIcon habit.user user habit._id false}}}</small>
        </h3>
        <div class="card habit">
            <div class="card-content">
                <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                {{{habit.body}}}
            </div>
        </div>
        <div class="card habit">
            <div class="card-content">
                {{#with habit}}
                <span>This brings me {{contentment}}, and overall makes me feel {{self}}.</span>
                {{/with}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{habit.user.displayName}}</span>
                <img src="{{habit.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/habits/user/{{habit.user._id}}">More From {{habit.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>